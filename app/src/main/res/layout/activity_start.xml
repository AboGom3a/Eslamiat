<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    tools:context=".StartActivity">
    <ImageView
        android:id="@+id/imgheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/start"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:alpha=".7"
        android:background="@drawable/splash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgheader" />

    <Button
        android:id="@+id/btn_Adyaa"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:background="@drawable/rect2"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/btn1"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#FA0202"
        app:layout_constraintTop_toBottomOf="@id/imgheader"
        app:layout_constraintStart_toStartOf="parent"
         />

    <Button
        android:id="@+id/btn_azkar"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:background="@drawable/rect2"
        android:layout_marginTop="50dp"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp"
        android:text="@string/btn2"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#FA0202"
        app:layout_constraintTop_toBottomOf="@id/imgheader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_Adyaa"
        />

    <Button
        android:id="@+id/btn_more"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:background="@drawable/rect2"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/btn3"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#FA0202"
        app:layout_constraintTop_toBottomOf="@id/btn_Adyaa"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btn_tasabeeh"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:background="@drawable/rect2"
        android:layout_marginTop="50sp"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp"
        android:text="@string/btn4"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#FA0202"
        app:layout_constraintTop_toBottomOf="@id/btn_azkar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_more"
        />

</androidx.constraintlayout.widget.ConstraintLayout>